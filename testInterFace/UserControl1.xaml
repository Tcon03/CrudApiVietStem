<UserControl x:Class="testInterFace.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:testInterFace"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- BƯỚC 1: ĐỊNH NGHĨA STYLE MỚI CHO DATEPICKER -->
        <Style x:Key="RoundedDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <!-- Dùng Border để tạo khung bo tròn -->
                        <Border BorderBrush="LightGray"
                            BorderThickness="1"
                            Background="White"
                            CornerRadius="17">
                            <!-- Bán kính bo tròn -->
                            <Grid>
                                <!-- 
                            PART_TextBox là tên bắt buộc để WPF biết đây là nơi hiển thị ngày.
                            Nó cho phép binding và hiển thị watermark.
                            -->
                                <DatePickerTextBox x:Name="PART_TextBox"
                                               Padding="10,0,0,0"
                                               BorderThickness="0"
                                               Background="Transparent"
                                               VerticalContentAlignment="Center"/>
                                <!-- 
                            PART_Button là tên bắt buộc cho nút bấm mở lịch.
                            -->
                                <Button x:Name="PART_Button"
                                    HorizontalAlignment="Right"
                                    Width="30"
                                    Foreground="Gray">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="Transparent">
                                                <!-- Bạn có thể dùng Icon Pack ở đây cho đẹp hơn -->
                                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                                  Stroke="Gray"
                                                  StrokeThickness="1.5"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ... (Bên trong Grid chứa thanh công cụ của bạn) ... -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

        <!-- 2. Áp dụng Style cho DatePicker ngày bắt đầu -->
        <DatePicker Width="140" Margin="5"
                Style="{StaticResource RoundedDatePickerStyle}"
                SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="đến" VerticalAlignment="Center"/>

        <!-- 3. Áp dụng Style cho DatePicker ngày kết thúc -->
        <DatePicker Width="140" Margin="5"
                Style="{StaticResource RoundedDatePickerStyle}"
                SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Ô tìm kiếm và nút Search của bạn -->
        <TextBox Width="200" Text="{Binding SearchText}"/>
        <Button Content="Search" Command="{Binding SearchCommand}"/>

    </StackPanel>
</UserControl>
