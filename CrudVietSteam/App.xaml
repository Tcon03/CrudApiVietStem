<Application x:Class="CrudVietSteam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CrudVietSteam"
             StartupUri="View/LoginView.xaml">
    <Application.Resources>



        <Style x:Key="btnIconTitleBar" TargetType="Button">

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter  Property="Margin" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4EB1B6"/>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#AAD922"/>
                </Trigger>
            </Style.Triggers>
        </Style>



        <Style TargetType="TextBlock" x:Key="tblUser">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 5 "/>
            <Setter Property="FontFamily" Value="Font\Nexa normal.ttf"/>
        </Style>


        <Style x:Key="tbxInput" TargetType="Control">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontFamily" Value="Font\Nexa.ttf"/>
            <Setter Property="FontSize" Value="15" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="35 5 0 0" />
            <Setter Property="Width" Value="300"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>
    </Application.Resources>
</Application>
