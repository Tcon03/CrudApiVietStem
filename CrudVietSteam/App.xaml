<Application x:Class="CrudVietSteam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CrudVietSteam"
             StartupUri="View/VietsteamDataView.xaml">
    <Application.Resources>

        <Style TargetType="Button" x:Key="btnMenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="FontFamily" Value="Font\Nexa.ttf"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0 20 20 0">
                            <ContentPresenter
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4EB1B6"/>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#AAD922"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="btnAdd" >
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="	#634BD4 "/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="/Font/#Roboto"/>
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="10">
                            <ContentPresenter
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Pink"/>
                    <Setter Property="Foreground" Value="DarkGoldenrod"/>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="LightSalmon"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="btnIconTitleBar" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="30 20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4EB1B6"/>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#AAD922"/>
                </Trigger>
            </Style.Triggers>
        </Style>



        <Style TargetType="TextBlock" x:Key="tblUser">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 5 "/>
            <Setter Property="FontFamily" Value="Font\Nexa normal.ttf"/>
        </Style>


        <Style x:Key="tbxInput" TargetType="Control">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontFamily" Value="Font\Nexa.ttf"/>
            <Setter Property="FontSize" Value="15" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="35 5 0 0" />
            <Setter Property="Width" Value="300"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>
    </Application.Resources>
</Application>
