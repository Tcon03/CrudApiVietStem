<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--tbxHint.xaml userControl style for TextBox with hint text-->
    <Style TargetType="TextBox" x:Key="tbxHint">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Padding" Value="12 "/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="MinWidth" Value="250"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>


    <!--Tbx Login style for LoginView-->
    <Style x:Key="tbxInput" TargetType="Control">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="Font\Nexa.ttf"/>
        <Setter Property="FontSize" Value="15" />
        <Setter Property="BorderBrush" Value="DarkGray" />
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="35 5 0 0" />
        <Setter Property="Width" Value="300"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0 5 0 0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>