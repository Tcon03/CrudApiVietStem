<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryColor" Color="#1b1448"/>
    <SolidColorBrush x:Key="ColorButtonPurpule" Color="#634BD4 "/>
    <SolidColorBrush x:Key="ColorBlue" Color="#4EB1B6"/>
    <SolidColorBrush x:Key="ColorRed" Color="#CC2B52"/>
    <SolidColorBrush x:Key="BlueLightColor" Color="#5B7FFF"/>
    <SolidColorBrush x:Key="CloseColor" Color="#9ACBD0"/>
    <SolidColorBrush x:Key="colorPress" Color="#66FFFFFF"/>
    <SolidColorBrush x:Key="colorMouse" Color="#44FFFFFF"/>

    <!--ColorText-->
    <SolidColorBrush x:Key="TextPrimaryBlack" Color="#1F2937"/>
    <SolidColorBrush x:Key="TextSecondaryGray" Color="#6B7280"/>

    <LinearGradientBrush x:Key="GenerateButtonGradient" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#00F2FF" Offset="0.0" />
        <GradientStop Color="#4C28E1" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GenerateButtonAdd" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#00C6FF" Offset="0.0" />
        <GradientStop Color="#0072FF" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GeminiActionButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF7A59" Offset="0.0" />
        <GradientStop Color="#FFB2A6" Offset="1.0" />
    </LinearGradientBrush>
</ResourceDictionary>