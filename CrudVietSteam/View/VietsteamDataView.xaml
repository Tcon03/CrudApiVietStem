<Window x:Class="CrudVietSteam.View.VietsteamDataView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudVietSteam.View"
        xmlns:UC="clr-namespace:CrudVietSteam.View.UserControls"
        mc:Ignorable="d"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mainVm="clr-namespace:CrudVietSteam.ViewModel"
        Title="VietsteamDataView" Height="720" Width="1280">
    <Window.DataContext>
        <mainVm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Item MenuItem-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Style="{StaticResource btnIconTitleBar}">
                <Icon:PackIconMaterial Kind="Menu"/>
            </Button>

            <Border Grid.Row="1"
                    CornerRadius="0 25 20 0"
                    Background="#634BD4">
                <StackPanel Orientation="Vertical">
                    <Button Command="{Binding ShowContestView}" 
                            CommandParameter="{Binding ElementName=_this}"
                            Style="{StaticResource btnMenuItem}">
                        
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/contest.png" 
                                 Height="30"
                                 Margin="5 0"
                                 Stretch="Uniform"/>
                            <TextBlock Text=" Contest" Margin="5"/>
                        </StackPanel>

                    </Button>
                    <Button Style="{StaticResource btnMenuItem}"
                            Command="{Binding ShowCityView}" 
                            CommandParameter="{Binding ElementName=_this}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/city.png" 
                                 Height="30"
                                 Margin="5 0"
                                 Stretch="Uniform"/>
                            <TextBlock Text="City" Margin="10 5"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </Border>
        </Grid>


        <!--Item Information-->
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!--Item ViewStem-->
            <Grid Grid.Row="0">
                <TextBlock 
                       HorizontalAlignment="Left"
                       Margin="40 15"
                       FontFamily="/Font/Nexa.ttf#Nexa"
                       Text="VietStem"
                       FontWeight="Bold"
                       FontSize="50"/>
                
                <Button HorizontalAlignment="Right" 
                        Style="{StaticResource btnAdd }">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" 
                              Width="20" 
                              Margin="10 0"
                              Height="20" 
                              Foreground="White"/>
                        <TextBlock FontFamily="/Font/Nexa.ttf#Nexa"
                               FontSize="15"
                               Text="Add Information"/>
                    </StackPanel>

                </Button>
            </Grid>

            <!--Item Information And Search-->
            <Grid Grid.Row="1">
                <TextBlock 
                           HorizontalAlignment="Left"
                           Margin="15"
                           FontFamily="/Font/Nexa.ttf#Nexa"
                           Text="{Binding CurrentTitle}"
                           FontWeight="Bold"
                          FontSize="30"/>

                <Border HorizontalAlignment="Right" 
                        CornerRadius="10"
                        Height="45"
                        Margin="10"
                        Width="300"
                        BorderThickness="2"
                        BorderBrush="Gray">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="10 0 0 0"
                                FontSize="15"
                                Text="Search In . . . "
                                VerticalAlignment="Center"
                                Foreground="LightGray"
                                Name="tblSearch"/>

                        <TextBox
                             VerticalAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             x:Name="tbxVisiSearch"
                             FontSize="18" 
                            FontFamily="/Font/Nexa.ttf#Nexa"
                             Padding=" 5 "
                             Margin="10 0 0 0"
                             TextChanged="visiInputClick"/>

                        <Button Grid.Column="1"
                                Margin="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                Width="30"
                                Height="30">
                            <Icon:PackIconMaterial Kind="SearchWeb"/>
                        </Button>
                    </Grid>
                </Border>

            </Grid>
            <Grid Grid.Row="2" Margin="10">
                <UC:ContestDataUC/>
            </Grid>
        </Grid>

    </Grid>
</Window>
