<Window x:Class="CrudVietSteam.View.VietstemMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudVietSteam.View"
        xmlns:UC="clr-namespace:CrudVietSteam.View.UserControls"
        mc:Ignorable="d"
        x:Name="_this"
        WindowStartupLocation="CenterScreen"
        xmlns:Vm="clr-namespace:CrudVietSteam.ViewModel"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="VietsteamDataView" Height="720" Width="1200">
    <Window.DataContext>
        <Vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type Vm:CityVM}">
            <UC:CityUC/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Vm:ContestsVM}">
            <UC:ContestDataUC/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Item MenuItem-->
        <Grid>
            <Grid.RowDefinitions>
                <!--sidebar-->
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>


            <Border Grid.Row="1"
                    CornerRadius="0 20 20 0"
                    Background="{DynamicResource ColorButtonPurpule}">

                <StackPanel Orientation="Vertical" 
                            Margin="0 70 0 70">
                    <Button Command="{Binding ShowContestView}" 
                            Style="{StaticResource btnSideBar}"
                            CommandParameter="{Binding ElementName=_this}">

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/contest.png" 
                                   Height="40"
                                   Margin="10 0"
                                   Stretch="Uniform"/>
                            <TextBlock Text="Contest Manager" 
                                       VerticalAlignment="Center"
                                       FontSize="25"
                                       Margin="5"/>
                        </StackPanel>
                    </Button>

                    <Button  Style="{StaticResource btnSideBar}"
                              Command="{Binding ShowCityView}" 
                              CommandParameter="{Binding ElementName=_this}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/city.png" 
                                   Height="40"
                                   Margin="10 0"
                                   Stretch="Uniform"/>
                            <TextBlock Text="City Manager"
                                       VerticalAlignment="Center"
                                       FontSize="25"
                                       Margin="10 0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>


        <!--Item Information Cột 2-->
        <Border Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="20"
                Margin="10 " >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Item 1 -->
                <Grid Grid.Row="0">
                    <TextBlock  
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Margin="20 0"
                         Foreground="{DynamicResource PrimaryColor}"
                         FontFamily="/Font/Nexa.ttf#Nexa"
                         Text="{Binding CurrentTitle}"
                         FontWeight="Bold"
                         FontSize="30"/>

                    <!--<TextBlock 
                           HorizontalAlignment="Left"
                           Margin="40 15"
                           FontFamily="/Font/Nexa.ttf#Nexa"
                           Text="VietStem"
                           FontWeight="Bold"
                           FontSize="50"/>-->

                    <Button HorizontalAlignment="Right" 
                            Margin="0 20 20 20 "
                            Command="{Binding AddInforCommand}"
                            CommandParameter="{Binding ElementName=_this}"
                            Style="{StaticResource btnAdd }">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Plus" 
                                  Width="20" 
                                  Margin="15 0"
                                  Height="20" 
                                  Foreground="White"/>
                            <TextBlock FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       FontSize="15"
                                       Text="Add Information"/>
                        </StackPanel>

                    </Button>
                </Grid>
                <!--Item 2 gạch ngang-->
                <!--<Grid Grid.Row="1">
                <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Left">

                    <Button Content="Contest" 
                            BorderBrush="#634BD4"
                            Command="{Binding ShowContestView}"
                            CommandParameter="{Binding ElementName=_this}"
                            Style="{StaticResource tapButton }"/>


                    <Button Content="City" 
                            Command="{Binding ShowCityView}"
                            CommandParameter="{Binding ElementName=_this}"
                            Style="{StaticResource tapButton }"/>

                    <Button Content="Container" 
                          Style="{StaticResource tapButton }"/>

                </StackPanel>
            </Grid>-->
                <Separator Grid.Row="1" 
                       VerticalAlignment="Bottom"
                       Margin="15"
                       BorderThickness="2"
                       BorderBrush="LightGray">
                </Separator>

                <!--Item 3 Search-->
                <Grid Grid.Row="2" 
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Item Date At-->
                    <DatePicker SelectedDate="{Binding CreatedAt ,Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"
                               Grid.Column="1"
                               FontSize="15"
                               VerticalContentAlignment="Center"
                               Margin="10 0 10 0"
                               Height="40">

                        <DatePicker.Resources>
                            <Style TargetType="{x:Type DatePickerTextBox}">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <TextBox x:Name="PART_TextBox" 
                                                  BorderThickness="0"
                                                  Padding="15 -11"
                                                  VerticalAlignment="Center"
                                                 Text="{Binding Path=SelectedDate,
                                                    RelativeSource={RelativeSource 
                                                    AncestorType={x:Type DatePicker}}, StringFormat=dd/MM/yyyy}" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <!--Item 2-->
                    <TextBlock Text="đến" 
                               VerticalAlignment="Center"
                               FontSize="17"
                               Grid.Column="2"/>
                    <!-- 3. Date End -->
                    <DatePicker 
                                 Grid.Column="3"
                                 Margin="10 0 20 0"
                                 FontSize="15"
                                 Height="40"
                                 SelectedDate="{Binding UpdatedAt , Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 VerticalAlignment="Center">
                        <DatePicker.Resources>
                            <Style TargetType="{x:Type DatePickerTextBox}">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <TextBox x:Name="PART_TextBox" 
                                               BorderThickness="0"
                                                Padding="15 -11"
                                               VerticalAlignment="Center"
                                               Text="{Binding Path=SelectedDate,
                                               RelativeSource={RelativeSource 
                                               AncestorType={x:Type DatePicker}},StringFormat=dd/MM/yyyy}" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <!--ITEM TextBox Search-->
                    <Grid Grid.Column="4">
                        <UC:HintTextBox  
                               HintText="Search Contest Id ..."
                               Text="{Binding Keywords,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                               Margin=" 0 "/>
                    </Grid>

                    <!--Item Button Search-->
                    <Grid  Grid.Column="5">
                        <Button Style="{StaticResource btnSearch }"
                                Command="{Binding SearchData }" 
                                CommandParameter="{Binding ElementName=_this}"
                                Margin="15 0 20 0">
                            <StackPanel Orientation="Horizontal" >
                                <Icon:PackIconMaterial 
                                            Kind="Magnify" 
                                            Width="30" 
                                            VerticalAlignment="Center"
                                            Margin="0 0"
                                            Foreground="White"/>
                                <TextBlock FontFamily="/Font/Roboto.ttf#Roboto Black"
                                             FontSize="18"
                                             Text="Search"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>

                <!--Item 4 Convert InterFace-->

                <ContentControl Grid.Row="3"
                                Content="{Binding CurrentView}">
                </ContentControl>


                <!--Item 5-->

            </Grid>
        </Border>


    </Grid>
</Window>
