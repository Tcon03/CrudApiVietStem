<Window x:Class="CrudVietSteam.View.VietstemMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudVietSteam.View"
        xmlns:UC="clr-namespace:CrudVietSteam.View.UserControls"
        mc:Ignorable="d"
        x:Name="_this"
        WindowStartupLocation="CenterScreen"
        xmlns:Vm="clr-namespace:CrudVietSteam.ViewModel"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="VietsteamDataView" Height="720" Width="1200">
    <Window.DataContext>
        <Vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Item MenuItem-->

        <Grid>
            <Grid.RowDefinitions>
                <!--sidebar-->
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Margin="20"
                    BorderThickness="0"
                    Background="Transparent">
                <Icon:PackIconMaterial Kind="Menu"/>
            </Button>

            <Border Grid.Row="1"
                      Background="{DynamicResource ColorButtonPurpule}">
                <StackPanel Orientation="Vertical" 
                            Margin="0 40">
                    <Button Command="{Binding ShowContestView}" 
                            Margin="0 10"
                            Style="{StaticResource btnSideBar}"
                            CommandParameter="{Binding ElementName=_this}">

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/contest.png" 
                                   Height="40"
                                   Margin="10 0"
                                   Stretch="Uniform"/>
                            <TextBlock Text="Contest" 
                                       VerticalAlignment="Center"
                                       FontSize="25"
                                       Margin="5"/>
                        </StackPanel>

                    </Button>
                    <Button  Style="{StaticResource btnSideBar}"
                                Command="{Binding ShowCityView}" 
                              CommandParameter="{Binding ElementName=_this}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/city.png" 
                                   Height="40"
                                   Margin="10 0"
                                   Stretch="Uniform"/>
                            <TextBlock Text="City"
                                        VerticalAlignment="Center"
                                         FontSize="25"
                                         Margin="10 0"/>

                        </StackPanel>
                    </Button>
                </StackPanel>

            </Border>
        </Grid>


        <!--Item Information-->
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Item 1 -->
            <Grid Grid.Row="0">
                <TextBlock 
                       HorizontalAlignment="Left"
                       Margin="40 15"
                       FontFamily="/Font/Nexa.ttf#Nexa"
                       Text="VietStem"
                       FontWeight="Bold"
                       FontSize="50"/>

                <Button HorizontalAlignment="Right" 
                        Margin="25"
                        Command="{Binding AddInfor}"
                        CommandParameter="{Binding ElementName=_this}"
                        Style="{StaticResource btnAdd }">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" 
                              Width="20" 
                              Margin="10 0"
                              Height="20" 
                              Foreground="White"/>
                        <TextBlock FontFamily="/Font/Nexa.ttf#Nexa"
                               FontSize="15"
                               Text="Add Information"/>
                    </StackPanel>

                </Button>
            </Grid>
            <!--Item 2-->
            <!--<Grid Grid.Row="1">
                <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Left">

                    <Button Content="Contest" 
                            BorderBrush="#634BD4"
                            Command="{Binding ShowContestView}"
                            CommandParameter="{Binding ElementName=_this}"
                            Style="{StaticResource tapButton }"/>


                    <Button Content="City" 
                            Command="{Binding ShowCityView}"
                            CommandParameter="{Binding ElementName=_this}"
                            Style="{StaticResource tapButton }"/>

                    <Button Content="Container" 
                          Style="{StaticResource tapButton }"/>

                </StackPanel>
            </Grid>-->
            <Separator Grid.Row="1" 
                       VerticalAlignment="Bottom"
                       Margin="15"
                       BorderThickness="2"
                       BorderBrush="Gray">

            </Separator>

            <!--Item 3-->
            <Grid Grid.Row="2" Margin="10" >
                <TextBlock  
                           HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                           Margin="20 0"
                            Foreground="{DynamicResource PrimaryColor}"
                           FontFamily="/Font/Nexa.ttf#Nexa"
                           Text="{Binding CurrentTitle}"
                           FontWeight="Bold"
                           FontSize="30"/>

                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <UC:HintTextBox  
                           HintText="Search Contest Id ..."
                           Margin=" 0 "/>


                    <Button Style="{StaticResource btnSearch }"
                             Margin="10 0 20 0">
                        <StackPanel Orientation="Horizontal" >
                            <Icon:PackIconMaterial Kind="Magnify" 
                                  Width="30" 
                                  VerticalAlignment="Center"
                                  Margin="0 0"
                                  Foreground="White"/>
                            <TextBlock FontFamily="/Font/Roboto.ttf#Roboto Black"
                                       FontSize="18"
                                       Text="Search"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!--Item 4-->
            <Grid Grid.Row="3"
                  Margin="10">
                <UC:ContestDataUC/>
            </Grid>

            <!--Item 5-->

        </Grid>

    </Grid>
</Window>
