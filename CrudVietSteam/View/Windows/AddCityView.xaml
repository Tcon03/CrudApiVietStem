<Window x:Class="CrudVietSteam.View.Windows.AddCityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudVietSteam.View.Windows"
        mc:Ignorable="d"
           xmlns:Vmd="clr-namespace:CrudVietSteam.ViewModel"
        xmlns:uc="clr-namespace:CrudVietSteam.View.UserControls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="AddInformation"
        Height="450" Width="700">
    <Border MouseDown="Border_MouseDown"
        CornerRadius="15"
        BorderThickness="1"
        BorderBrush="MediumPurple"
        Background="White" >
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <TextBlock Text="Add City Information" 
                   FontSize="30" 
                   Foreground="#434344"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Margin="20 10"/>
                <Button Style="{StaticResource btnClose}" 
                         Click="btnClose_Click">
                    <Icon:PackIconMaterial Kind="Close" 
                    Width="20" 
                    Height="20" 
                    Foreground="Red"/>
                </Button>
            </Grid>


            <Grid  HorizontalAlignment="Center"
                   Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0 0 20 0">
                    <uc:HeaderHintTbl Margin="10 "
                              Text="{Binding Name ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              HintText="Name Contest ..."
                              TextHeader="Name"/>

                    <uc:HeaderHintTbl Margin="10"
                              Text="{Binding Introduce ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              HintText="Introduct contest ..."
                              TextHeader="Introduct"/>

                    <uc:HeaderHintTbl Margin="10 "
                                Text="{Binding Status ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              HintText="Status Contest ..."
                              TextHeader="status"/>

                </StackPanel>

            </Grid>

            <StackPanel Orientation="Horizontal" 
                Margin="0 0 20 10"
                HorizontalAlignment="Right"
                Grid.Row="2">

                <Button Content="Cancel" 
                Click="btnClose_Click"
                Style="{StaticResource btnCancel}">
                </Button>

                <Button Content="OK" 
                Command="{Binding AddContestCommand}" 
                CommandParameter="{Binding ElementName=_this}"
                Style="{StaticResource btnOk}">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
