<Window x:Class="CrudVietSteam.View.Windows.AddCityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudVietSteam.View.Windows"
        mc:Ignorable="d"
        xmlns:Vmd="clr-namespace:CrudVietSteam.ViewModel"
        xmlns:uc="clr-namespace:CrudVietSteam.View.UserControls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        WindowStyle="None"
        x:Name="_this"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="AddInformation"
        Width="400"
        Height="450" >
   
    <Border MouseDown="Border_MouseDown"
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="MediumPurple"
            Background="White" >
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <TextBlock Text="Add City Information" 
                   FontSize="25" 
                   Foreground="#434344"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Margin="20 10"/>
                <Button Style="{StaticResource btnClose}" 
                        Click="btnClose_Click">
                    <Icon:PackIconMaterial Kind="Close" 
                    Width="20" 
                    Height="20" 
                    Foreground="Black"/>
                </Button>
            </Grid>


            <Grid  Grid.Row="1" HorizontalAlignment="Center" >
                <StackPanel >
                    <uc:HeaderHintTbl Margin="10 "
                              Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              HintText="Name City ..."
                              TextHeader="Name"/>

                    <uc:HeaderHintTbl Margin="10"
                              Text="{Binding Mtp,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              HintText="MTP City ..."
                              TextHeader="Introduct"/>

                    <uc:HeaderHintTbl Margin="10 "
                              Text="{Binding Type,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              HintText="Type City ..."
                              TextHeader="Type"/>

                </StackPanel>

            </Grid>

            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center"
                Grid.Row="2">

                <Button Content="Cancel" 
                    Click="btnClose_Click"
                    Style="{StaticResource btnCancel}">
                </Button>

                <Button Content="OK" 
                        Command="{Binding AddCityCommand}" 
                        CommandParameter="{Binding ElementName=_this}"
                        Style="{StaticResource btnOk}">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
