<UserControl x:Class="CrudVietSteam.View.UserControls.ContestDataUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrudVietSteam.View.UserControls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Vmd ="clr-namespace:CrudVietSteam.ViewModel"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="600">
    <UserControl.DataContext>
        <Vmd:ContestsVM/>
    </UserControl.DataContext>
    <Border CornerRadius="10"
            Background="Transparent">

        <Grid Margin="5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <!--thuộc tính cho tiêu đề của DataGrid-->
            <DataGrid 
                 MinRowHeight="50"
                 BorderThickness="0"
                 Background="Transparent"
                 FontSize="20"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 Foreground="{DynamicResource  TextPrimaryBlack}"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 ItemsSource="{Binding Contests , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                <!--style của DataGrid-->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <!--EVENT Selection vào ô thì sẽ đổi màu-->
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BlueLightColor}"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>

                    <!--display the data from ContestsDTO-->
                    <DataGridTextColumn Header="ID"  Binding="{Binding id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="150"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding title}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding description}" Width="200"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="120"/>
                    <DataGridTemplateColumn   Width="50" >
                        <!--Custom Actions-->
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Menu HorizontalAlignment="Center" 
                                      Background="Transparent"
                                      FontWeight="DemiBold"
                                      VerticalAlignment="Center">
                                    <MenuItem Header="⋮" FontSize="20" >
                                        <!--Item Edit-->
                                        <MenuItem Header="Edit" 
                                              CommandParameter="{Binding}"
                                              Command="{Binding DataContext.EditContestCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <MenuItem.Icon>
                                                <Icon:PackIconMaterial Kind="Pencil" />
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <!--Item Delete-->
                                        <MenuItem Header="Delete" Foreground="Red"
                                                  CommandParameter="{Binding}" 
                                                  Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <MenuItem.Icon>
                                                <Icon:PackIconMaterial Kind="Delete" Foreground="Red"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </Menu>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!-- Thêm các cột khác từ ContestsDTO của bạn ở đây -->
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2" 
              d:Background="White" >

                <TextBlock HorizontalAlignment="Left"
                       FontSize="17"
                       FontWeight="Bold"
                       Margin="10"
                       VerticalAlignment="Center">
                <Run Text="Total Records: "/>
                <Run Text="{Binding TotalRecords,Mode=OneWay,UpdateSourceTrigger =PropertyChanged}" />

                </TextBlock>

                <StackPanel  Margin="20 5"
                  HorizontalAlignment="Right"
                  Orientation="Horizontal">

                    <Button  Command="{Binding PreviousPage}"
                             CommandParameter="{Binding ElementName=root}"
                             Margin="5"
                             Style="{StaticResource btnIconNext}">
                        <Icon:PackIconMaterial Kind="ChevronLeft" 
                                Foreground="White"/>
                    </Button>
                    <TextBlock 
                             FontSize="18"
                             FontWeight="Bold"
                             VerticalAlignment="Center"
                             Margin=" 5">
                    <Run Text="{Binding CurrentPage , Mode=OneWay}"/> 
                    <Run Text=" of "/>
                    <Run Text="{Binding TotalPage , Mode=OneWay}"/>
                    </TextBlock>
                    <Button   Command="{Binding NextPage}"
                              CommandParameter="{Binding ElementName=root}"
                              Style="{StaticResource btnIconNext}"
                              BorderThickness="0">
                        <Icon:PackIconMaterial Kind="ChevronRight" 
                                            Foreground="White"/>
                    </Button>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>

</UserControl>
