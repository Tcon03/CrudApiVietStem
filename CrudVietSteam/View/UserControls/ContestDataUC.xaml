<UserControl x:Class="CrudVietSteam.View.UserControls.ContestDataUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrudVietSteam.View.UserControls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Vmd ="clr-namespace:CrudVietSteam.ViewModel"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="600">


    <Grid Background="Azure"  Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--thuộc tính cho tiêu đề của DataGrid-->
        <Border CornerRadius="15" 
                    Padding="6"
                    BorderBrush="LightGray"
                              
                    BorderThickness="2"
                   SnapsToDevicePixels="True">
            <DataGrid    VerticalGridLinesBrush="#E5E9EF"
                         GridLinesVisibility="Horizontal" 
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         Foreground="{DynamicResource  TextPrimaryBlack}"
                         AutoGenerateColumns="False"
                         BorderThickness="0" 
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         ItemsSource="{Binding Contests,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                <DataGrid.Resources>
                    <!-- Style chung cho TextBlock trong DataGrid -->
                    <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" 
                                Value="Center"/>
                        <Setter Property="Padding" 
                                Value="12 0"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" 
                                Value="Black"/>
                        <Setter Property="FontSize"
                                Value="15"/>
                        <Setter Property="FontWeight" 
                                Value="Normal"/>
                        <Setter Property="MinHeight"
                                Value="50"/>

                        <!--EVENT Selection vào ô thì sẽ đổi màu-->
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" 
                                        Value="{DynamicResource BlueLightColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>



                <!--style Header-->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" 
                                Value="#F8FAFC"/>
                        <Setter Property="Foreground" 
                                Value="#2A2F36"/>
                        <Setter Property="FontWeight" 
                                Value="Medium"/>
                        <Setter Property="Padding"     
                                Value="12 10"/>
                        <Setter Property="FontSize" 
                                Value="20"/>
                        <Setter Property="BorderBrush" 
                                Value="#E5E9EF"/>
                        <Setter Property="BorderThickness"
                                Value="0,0,0,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>


                <DataGrid.Columns>

                    <!--display the data from ContestsDTO-->
                    <DataGridTextColumn Header="ID"  
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"
                                        Binding="{Binding id}" 
                                        Width="50" CanUserResize="False"/>
                    <DataGridTextColumn Header="Name" 
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"
                                        Binding="{Binding name}"
                                        Width="*"/>

                    <DataGridTextColumn Header="Title" 
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"
                                        Binding="{Binding title}" 
                                        Width="2*"/>

                    <DataGridTextColumn Header="Description" 
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"
                                        Binding="{Binding description}"
                                        Width="*"/>

                    <DataGridTextColumn Header="Status"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"
                                        Binding="{Binding status}"
                                        Width="*"/>

                    <DataGridTemplateColumn   Width="50" CanUserResize="False" >
                        <!--Custom Actions-->
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Menu HorizontalAlignment="Center" 
                                      Background="Transparent"
                                      FontWeight="DemiBold"
                                      VerticalAlignment="Center">
                                    <MenuItem Header="⋮" FontSize="20" >
                                        <!--Item Edit-->
                                        <MenuItem Header="Edit" 
                                              CommandParameter="{Binding}"
                                              Command="{Binding DataContext.EditContestCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <MenuItem.Icon>
                                                <Icon:PackIconMaterial Kind="Pencil" />
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <!--Item Delete-->
                                        <MenuItem Header="Delete" Foreground="Red"
                                                  CommandParameter="{Binding}" 
                                                  Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <MenuItem.Icon>
                                                <Icon:PackIconMaterial Kind="Delete" Foreground="Red"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </Menu>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!-- Thêm các cột khác từ ContestsDTO của bạn ở đây -->
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="2" 
              d:Background="White" >

            <TextBlock HorizontalAlignment="Left"
                       FontSize="17"
                       FontWeight="Bold"
                       Margin="10"
                       VerticalAlignment="Center">
                <Run Text="Total Records: "/>
                <Run Text="{Binding TotalRecords,Mode=OneWay,UpdateSourceTrigger =PropertyChanged}" />

            </TextBlock>

            <StackPanel  Margin="20 5"
                  HorizontalAlignment="Right"
                  Orientation="Horizontal">

                <Button  Command="{Binding PreviousPage}"
                             CommandParameter="{Binding ElementName=root}"
                             Margin="5"
                             Style="{StaticResource btnIconNext}">
                    <Icon:PackIconMaterial Kind="ChevronLeft" 
                                Foreground="White"/>
                </Button>
                <TextBlock 
                             FontSize="18"
                             FontWeight="Bold"
                             VerticalAlignment="Center"
                             Margin=" 5">
                    <Run Text="{Binding CurrentPage , Mode=OneWay}"/> 
                    <Run Text=" of "/>
                    <Run Text="{Binding TotalPage , Mode=OneWay}"/>
                </TextBlock>
                <Button   Command="{Binding NextPage}"
                              CommandParameter="{Binding ElementName=root}"
                              Style="{StaticResource btnIconNext}"
                              BorderThickness="0">
                    <Icon:PackIconMaterial Kind="ChevronRight" 
                                            Foreground="White"/>
                </Button>

            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
