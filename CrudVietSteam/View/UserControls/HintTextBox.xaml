<UserControl x:Class="CrudVietSteam.View.UserControls.HintTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrudVietSteam.View.UserControls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="40" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBox" x:Key="tbxHint">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="/Font/Roboto.ttf#Roboto Black"/>
            <Setter Property="Padding" Value="10 10 10 10"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="8"
            Margin="2"
            BorderThickness="1"
            BorderBrush="Gray"
            Background="White">

        <Grid>
            <TextBox Style="{StaticResource tbxHint}"
                 x:Name="tbxWord"
                 Text="{Binding ElementName=root,Path=Text,
                 Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </TextBox>

            <TextBlock IsHitTestVisible="False"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       x:Name="txtHint"
                       Foreground="Gray"
                       Margin="5"
                       FontWeight="DemiBold"
                       FontStyle="Italic"
                       d:Text="example ..."
                       Text="{Binding ElementName=root,Path=HintText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       FontSize="13">

                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <!--trigger là 1 sự kiện xảy ra sự kiện khi liên kết với thuộc tính tbx User nhập vào -->
                        <Style.Triggers>
                            <!--data là dữ liệu text của TextBox tbxWord -->
                            <DataTrigger Binding="{Binding Text,ElementName=tbxWord }"
                                         Value="">
                                <Setter Property="Visibility"
                                            Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>

</UserControl>
