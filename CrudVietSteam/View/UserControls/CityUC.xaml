<UserControl x:Class="CrudVietSteam.View.UserControls.CityUC"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:CrudVietSteam.View.UserControls"
                         mc:Ignorable="d" 
                         xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                         xmlns:viewModel ="clr-namespace:CrudVietSteam.ViewModel"
                         d:DesignHeight="550" d:DesignWidth="600">
    <UserControl.DataContext>
        <viewModel:CityVM/>
    </UserControl.DataContext>
    <Border Background="Transparent"
             CornerRadius="20">
        <Grid Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <DataGrid 
                   MinRowHeight="50"
                   BorderThickness="0"
                   Background="Transparent"
                   FontSize="20"
                   ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                   ScrollViewer.VerticalScrollBarVisibility="Hidden"
                   Foreground="{DynamicResource  TextPrimaryBlack}"
                   AutoGenerateColumns="False"
                   CanUserAddRows="False"
                   IsReadOnly="True"
                   ItemsSource="{Binding CitysList , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                <!--style của DataGrid-->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <!--EVENT Selection vào ô thì sẽ đổi màu-->
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BlueLightColor}"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>

                    <!--display the data from ContestsDTO-->
                    <DataGridTextColumn Header="ID"  Binding="{Binding id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding type}" Width="*"/>
                    <DataGridTextColumn Header="MTP" Binding="{Binding mtp}"  Width="*"/>
                    <DataGridTemplateColumn   Width="50" >
                        <!--Custom Actions-->
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Menu HorizontalAlignment="Center" 
                                    Background="Transparent"
                                    FontWeight="DemiBold"
                                    VerticalAlignment="Center">
                                    <MenuItem Header="⋮" FontSize="20" >
                                        <!--Item Edit-->
                                        <MenuItem Header="Edit" 
                                                CommandParameter="{Binding}"
                                                Command="{Binding DataContext.EditCityCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <MenuItem.Icon>
                                                <Icon:PackIconMaterial Kind="Pencil" />
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <!--Item Delete-->
                                        <MenuItem Header="Delete" Foreground="Red"
                                                    CommandParameter="{Binding}" 
                                                    Command="{Binding DataContext.DeleteCityCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <MenuItem.Icon>
                                                <Icon:PackIconMaterial Kind="Delete" Foreground="Red"/>
                                            </MenuItem.Icon>
                                        </MenuItem>


                                    </MenuItem>
                                </Menu>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!-- Thêm các cột khác từ ContestsDTO của bạn ở đây -->
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2" 
                d:Background="White" >

                <TextBlock HorizontalAlignment="Left"
                         FontSize="17"
                         FontWeight="Bold"
                         Margin="10"
                         VerticalAlignment="Center">
                  <Run Text="Total Records: "/>
                  <Run Text="{Binding TotalRecords,Mode=OneWay,UpdateSourceTrigger =PropertyChanged}"  />

                </TextBlock>

                <StackPanel  Margin="20 5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

                    <Button  Command="{Binding PrevPageCommand}" 
                           CommandParameter="{Binding ElementName=root}"
                            Margin="5"
                            Style="{StaticResource btnIconNext}">
                        <Icon:PackIconMaterial Kind="ChevronLeft" 
                                  Foreground="White"/>
                    </Button>
                    <TextBlock 
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin=" 5">
                      <Run Text="{Binding CurrentPage , Mode=OneWay}"/> 
                      <Run Text=" of "/>
                      <Run Text="{Binding TotalPage , Mode=OneWay}"/>
                    </TextBlock>
                    <Button   Command="{Binding NextPageCommand}"
                            CommandParameter="{Binding ElementName=root}"
                            Style="{StaticResource btnIconNext}"
                            BorderThickness="0">
                        <Icon:PackIconMaterial Kind="ChevronRight" 
                                              Foreground="White"/>
                    </Button>

                </StackPanel>
            </Grid>


        </Grid>
    </Border>
</UserControl>
